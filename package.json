{
  "name": "crud-api",
  "version": "1.0.0",
  "description": "Implements simple CRUD API using in-memory database underneath, with the possibility of horizontal scaling of the application",
  "author": "Natallia Fedartsova",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "lint": "eslint \"src/**/*.ts\" --fix",
    "webpack": "webpack --config webpack.config.js",
    "start:dev": "node --watch --no-warnings=ExperimentalWarning --experimental-specifier-resolution=node --loader ./ts-node-esm-loader.js --env-file=.development.env src/index.ts",
    "start:prod": "webpack && node --env-file=.env dist/bundle.cjs",
    "start:multi:dev": "cross-env MULTI=true npm run start:dev",
    "start:multi:prod": "cross-env MULTI=true npm run start:prod",
    "test": "jest --silent",
    "test:verbose": "jest --verbose"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.12.0",
    "@types/jest": "^29.5.13",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.9.0",
    "@typescript-eslint/parser": "^8.9.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.11.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "uuid": "^10.0.0"
  }
}
